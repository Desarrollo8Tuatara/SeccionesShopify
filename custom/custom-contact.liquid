<style>
  .contact-info-content h3 {
    margin: 0 auto;
    text-align: center;
    font-size: 65px;
    line-height: 65px;
    color: #67121a;
    text-transform: uppercase !important;
  }
  .contact-info-content ul li {
    color: #2a1714;
    margin-bottom: 6px;
    font-size: 20px;
    line-height: 21px;
    letter-spacing: -0.02px;
  }
  .contact-info-content ul li img {
    margin-right: 8px;
  }
</style>
<div class="contact-info-content">
  <div class="row align-items-center">
    <div class="col-12 col-lg-6 mb-3 mb-lg-0">
      {% if section.settings.title_section != blank %}
        <h3>{{ section.settings.title_section }}</h3>
      {% endif %}
    </div>
    <div class="col-12 col-lg-6">
      <ul>
        {% for block in section.blocks %}
          <li>
            <img src="{{ block.settings.icon_info | img_url: 'master' }}" width="auto" height="auto">
            {{ block.settings.description_info }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Información de contacto",
  "settings": [
    {
      "type": "text",
      "id": "title_section",
      "label": "Título de la sección"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Items",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_info",
          "label": "Icono de la información"
        },
        {
          "type": "text",
          "id": "description_info",
          "label": "Descrioción de la información"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Info"
    }
  ]
}
{% endschema %}
