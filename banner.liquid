        {
          "value": "banner_3",
          "label": "Tipo 3"
        },
        {
          "value": "banner_4",
          "label": "Tipo 4"
        },
         {
          "value": "banner_5",
          "label": "Tipo 5"
        },
         {
          "value": "banner_6",
