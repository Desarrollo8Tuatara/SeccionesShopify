    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del Botón",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del Botón",
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    }
  ],
  "presets": [
    {
      "name": "Banner Principal"
    }
  ]
}
{% endschema %}